<h1>My tasks </h1>

<ul>
<% @tasks.each do |task|%>
<li><%= link_to task.title, task_path(task.id) %>

<%= link_to task_path(task), method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } do %>
  <i class="fa-regular fa-trash-can"></i>
  <% end %>
<% end %>

</ul>
<%=link_to "add task", tasks_new_path %>
